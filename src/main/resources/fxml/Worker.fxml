<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.92" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.databasemanagement.WorkerController">
   <center>
      <TextArea fx:id="text" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <Button mnemonicParsing="false" onAction="#submit" text="Suvesti" BorderPane.alignment="CENTER" />
   </bottom>
   <right>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <ComboBox fx:id="combobox" onMouseClicked="#fillOrdersCombobox" prefWidth="150.0" />
            <Button mnemonicParsing="false" onAction="#markAsCompleted" text="Pažymėti kaip įvykdyta" />
         </children>
      </VBox>
   </right>
   <top>
      <Label text="Ataskaita" BorderPane.alignment="CENTER" />
   </top>
</BorderPane>
